@using System.Security.Claims
@{
    Layout = null;
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value;
    var isUltraAdmin = userRole == "UltraAdmin";
    var userName = User.FindFirst(ClaimTypes.Name)?.Value;
}

<!DOCTYPE html>
<html>
<title>Admin</title>
<meta name="viewport" content="width=device-width, initial-scale=1" />
<link rel="stylesheet" href="https://www.w3schools.com/w3css/5/w3.css" />

<a href="~/lib/bootstrap/dist/css/bootstrap.min.css.map">~/lib/bootstrap/dist/css/bootstrap.min.css.map</a>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<a href="~/lib/bootstrap/dist/css/bootstrap-theme.css.map">~/lib/bootstrap/dist/css/bootstrap-theme.css.map</a>
<a href="~/lib/bootstrap/dist/css/bootstrap-theme.min.css.map">~/lib/bootstrap/dist/css/bootstrap-theme.min.css.map</a>
<link href="~/lib/bootstrap/dist/css/bootstrap-theme.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap-theme.css" rel="stylesheet" />
<body>

    <!-- Sidebar -->
    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:15%">
        
        <!--kullanıcı bilgisi ve rol gösterimi-->
        <div class="w3-bar-item" style="font-size:20px">
            <strong >@userName</strong><br />
            <span class="@(isUltraAdmin ? "w3-text-red" : "w3-text-blue")">
                @(isUltraAdmin ? "Ultra Admin" : "Admin")
            </span>
        </div>

		<h3 class="w3-bar-item">Menüler</h3>

        <hr />

        <a href="/Admin/Index/" class="w3-bar-item w3-button">Bloglar</a>
        <a href="/Admin/YorumListesi/" class="w3-bar-item w3-button">Yorumlar</a>
        <a href="/Admin/Iletişim/" class="w3-bar-item w3-button">İletişim</a>
        <a href="/Admin/Hakkimizda/" class="w3-bar-item w3-button">Hakkımızda</a>
        <a href="/Default/Index/" class="w3-bar-item w3-button">Siteye Git</a>
        <a href="/GirisYap/LogOut/" class="w3-bar-item w3-button">Çıkış Yap</a>

    </div>
    
    <!-- Page Content -->
    <div style="margin-left:15%">

        <div class="w3-container w3-blue" style="font-size:16px">
            <h4>Admin Yönetim Paneli</h4>
            @if (!isUltraAdmin)
            {
                <strong class="w3-text-black">Sınırlı Yetki - Sadece yorumları yönetebilir ve blog detaylarını görüntüleyebilirsiniz</strong>
            }
        </div>


        <div class="w3-container">
            @RenderBody()
        </div>

    </div>

</body>
</html>
