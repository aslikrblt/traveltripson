@using TravelTripProje.Models.Sınıflar
@model List<Blog>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@


<div class="padding">
    <div class="box-left">
        <h4>En Popüler 10 Yazı</h4>
        <ul class="list list-pad">
            @{ int i = 0;}
            @foreach (var x in Model)
            {
                <li class="list-bg"><span>@{i++; } @i. </span><a href="/Blog/BlogDetay/@x.ID">@x.Baslik</a></li>
            }
        
        </ul>
        <a href="/Blog/Index/" class="link1">Tüm blog yazıları..</a>
    </div>
</div>

